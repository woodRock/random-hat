all: build_release copy_404 copy_index

build_release: 
	@echo "Building release ðŸ”§"
	@trunk build 

copy_404:
	@echo "Copying 404.html ðŸ“‹"
	@cp 404.html docs/

copy_index:
	@echo "Copying index.html ðŸ“‹"
	@cp public/index.html docs/

format: 
	@echo "Format ðŸ§¹"
	@cargo fmt --all -- --check

lint: 
	@echo "Linting ðŸ§¹"
	@cargo clippy --all -- -D warnings

pedantic:
	@echo "Linting (pedantic) ðŸ§¹"
	@cargo clippy --all -- -D warnings -D clippy::pedantic

